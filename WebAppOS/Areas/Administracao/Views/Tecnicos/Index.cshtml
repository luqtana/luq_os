@model IEnumerable<WebAppOS.Models.Tecnico>

@{
    ViewBag.Title = "Técnicos";
}

<h2>Lista de Técnicos Cadastrados</h2>

<p>
    @Html.ActionLink("Adicionar Técnico", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CPF)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CPF)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.TecnicoId }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.TecnicoId }) |
            @Html.ActionLink("Deletar", "Delete", new { id=item.TecnicoId })
        </td>
    </tr>
}

</table>
